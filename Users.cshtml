@model IEnumerable<SemiApprenticeship.Entities.Users>

@{
    ViewData["Title"] = "Users";
}

<h1>Users</h1>

<div class="float-right" >
<p>
    <a asp-action="Add">Create New</a>
</p>
    </div>
<table class="table table-bordered table-hover table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserFullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LoginName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreateOn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Remarks)
            </th>
            @*<th>
                @Html.HiddenFor(model => model.Status)
            </th>*@
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            
            <td>
                @Html.DisplayFor(modelItem => item.UserId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserFullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LoginName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreateOn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Remarks)
            </td>
           @* <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>*@
        <td>
            @Html.ActionLink("View", "Details", new {  id=item.UserId  }) 
            @Html.ActionLink("Edit", "Edit", new { id = item.UserId })
            @Html.ActionLink("Delete", "Delete", new { id = item.UserId })
        </td>
        </tr>
}
    </tbody>
</table>
